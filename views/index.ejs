<%- include('includes/header') %>
<%- include('includes/navbar') %>
<div class="starter-template">
   <h1>Welcome, <%=user.username%></h1>
</div>
<%- messages() %>
<div>
   <form action="/users/upload" method="POST" encType="multipart/form-data">
      <div class="form-group">
         <input type="text" class="form-control" name="asset_message" placeholder="What's up with you today" required autofocus>
      </div>
      <div class="form-group">
         <input type="file" name="asset_image">
         <p class="help-block">Images files only!</p>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
   </form>
   <br>
   <% for (var abc in data) {%>
   <form action="/users/comment" method="GET" >
      <p><i>  <%= data[abc].user_name %></p>
      <p><%= data[abc].message%></p>
      <img src="<%= data[abc].filepath%>" height="42" width="42">
      <br>
      <a href="/users/likePost?userId=<%-user.uuid%>&postId=<%-data[abc].post_id%>"> <span class="glyphicon glyphicon-heart"> </a> <%= data[abc].likes.length %> </span>
      <br><br>
      <%  for (var i in data[abc].comments ){%>
      <p> <%= data[abc].comments[i].userName%> <input type="text" readonly value='<%=data[abc].comments[i].message%>'> </p>
      <br>
      <% }%>
      <input type="hidden" name="postId" value="<%-data[abc].post_id%>">
      <input type="hidden" name="userName" value="<%-user.name%>">
      <input type = "text" name="comment" placeholder="Your comment">  
      <input type = "post"> 
   </form>
   <% }%>
   <br>
</div>
</div>
<br>
<%- include('includes/footer') %>